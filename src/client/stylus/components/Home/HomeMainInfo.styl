.HomeMainInfo
  display grid
  grid-gap 10px
  margin-top 32px
  +from-width($sm)
    grid-template-columns 1fr 1fr
  +from-width($md)
    grid-template-columns 1fr 1fr 1fr 1fr
  .square
    padding 1em
  &-title
    font-size 14px
    text-transform uppercase
    color $dark-blue
  &-details
    display flex
    align-items center
    &-figure
      margin-right 35px
      width 33px
      img
        width 100%
    &-text
      font-size 36px
      color $orange
